@model BasitBlogProjesi.Models.Category

@{
    ViewBag.Title = "Create";
}

<h2>Kategori Ekleme</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="col-md-2">Kategori Adı</label>
            <div class="col-md-8">
                <input type="text" class="form-control col" name="KategoriAdi" id="KategoriAdi" value="" />
                @Html.ValidationMessageFor(model => model.KategoriAdi, "", new { @class = "text-danger" })
            </div>
            <div class="col-md-2 text-right">
                <input type="submit" value="Oluştur" class="btn btn-success btn-sm" />
            </div>
        </div>
    </div>
}

<div class="text-right">
    <a href="/category/index" class="btn btn-danger btn-sm">Vazgeç</a>

</div>

<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
