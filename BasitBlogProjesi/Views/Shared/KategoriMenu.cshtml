<div class="well">
    <form action="/home/BlogSearch" method="get">

        <div class="input-group">
            <input type="text" class="form-control" name="search" id="search" placeholder="Search for...">
            <span class="input-group-btn">
                <button class="btn btn-default" type="submit"><span class=" glyphicon glyphicon-search"></span></button>
            </span>
        </div><!-- /input-group -->
    </form>
    
</div>

<hr />
<ul class="list-group">
    @foreach (var item in ViewBag.Kategori)
    {
        <li class="list-group-item">
            <a href="/Home/KategoriBlog/@item.Id"> @item.KategoriAdi</a>
        </li>
    }
</ul>
